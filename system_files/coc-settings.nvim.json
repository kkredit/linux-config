{
  "diagnostic.enableSign": false,
  "languageserver": {
    "dls": {
      "command": "diagnostic-languageserver",
      "args": ["--stdio"],
      "filetypes": ["sh"],
      "initializationOptions": {
        "filetypes": {
          "sh": "shellcheck"
        },
        "linters": {
          "shellcheck": {
            "command": "shellcheck",
            "debounce": 100,
            "args": ["--format=gcc", "-"],
            "offsetLine": 0,
            "offsetColumn": 0,
            "sourceName": "shellcheck",
            "formatLines": 1,
            "formatPattern": [
              "^[^:]+:(\\d+):(\\d+):\\s+([^:]+):\\s+(.*)$",
              {
                "line": 1,
                "column": 2,
                "message": 4,
                "security": 3
              }
            ],
            "securities": {
              "error": "error",
              "warning": "warning",
              "note": "info"
            }
          }
        },
        "formatFiletypes": {
          "sh": "shfmt"
        },
        "formatters": {
          "shfmt": {
            "command": "shfmt",
            "args": ["-i", "2", "-bn", "-ci", "-sr"]
          }
        }
      }
    }
  }
}
